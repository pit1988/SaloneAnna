DROP TABLE IF EXISTS AppuntamentiClienti;

CREATE TABLE AppuntamentiClienti (
CodAppuntamento INT AUTO_INCREMENT,
CodCliente INT,
Sconto DOUBLE,
TipoAppuntamento ENUM('shampoo','taglio','piega e phon','piega e casco','ondulazione','colore','riflessante','decolorazione','meches','trattamenti','manicure/pedicure'),

FOREIGN KEY(CodAppuntamento) references Appuntamenti(CodAppuntamento)
				on delete cascade,
FOREIGN KEY(CodCliente) references Clienti(CodCliente)
				on delete cascade

)Engine=InnoDB;

