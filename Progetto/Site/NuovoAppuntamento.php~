<?php
//cerco di estrarre piu' clienti con lo stesso nome.
$queryc =("select * from Clienti c where c.Nome = $nome and c.Cognome = $cognome");
$result = mysql_query(queryc);
$number_cols = mysql_num_fields($result);
echo "Ci sono piu' persone con lo stesso nome per questo appuntamento seleziona quale:";
//intestazione tabella
echo "<table border = 1>\n";
echo "<tr align=center>\n";
for ($i=0; $i<$number_cols; $i++)
  {
    echo "<th>" . mysql_field_name ($result, $i). "</th>\n";
  }
echo "</tr>\n";
//corpo tabella
while ($row = mysql_fetch_row($result))
{
  echo "<tr align=left>\n";
  for ($i=0; $i<$number_cols; $i++)
  {
    echo "<td>";
    if(!isset($row[$i]))
      {echo "NULL";}
    else
      {
      if($i==0)
	{
	echo "<input type="radio" name="queryc" value="id">";
	}
	echo $row[$i];
      }
    echo "</td>\n";
  }
  echo "</td>\n";
}

echo "</table>";

?>

